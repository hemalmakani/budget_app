{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "declaration": false,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["../*"]
    }
  },
  "include": ["**/*.ts", "../types/**/*.ts"],
  "exclude": ["node_modules"]
}
